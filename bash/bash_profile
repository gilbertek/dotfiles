PS1="${PINK_SHADOW}\u ${GREY_SHADOW}at ${ORANGE_SHADOW}\h ${GREY_SHADOW}in ${GREEN_SHADOW}\W$(parse_git_branch) ${GREY_SHADOW}${CHAR}${COLOR_RESET} "

