{
  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "elm",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "json",
    "haskell",
    "css",
    "scss",
    "sass",
    "html",
    "html.handlebars",
    "vue",
    "rust",
    "dhall",
    "elixir",
    "go",
    "python",
    "scala",
    "dart"
  ],
  "coc.preferences.formatOnInsertLeave": true,
  "coc.preferences.formatOnType": true,
  "prettier.requireConfig": true,
  "prettier.eslintIntegration": true,
  "prettier.singleQuote": true,
  "snippets.ultisnips.enable": true,
  "snippets.extends": {
    "vue": ["javascript"]
  },
  "suggest.snippetIndicator": " ►",
  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "python.linting.mypyEnabled": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.serverPath": "~/.local/bin/rust-analyzer",
  "tsserver.formatOnType": false,
  "signature.target": "echo",
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.refreshAfterSave": false,
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.errorSign": "●",
  "diagnostic.warningSign": "",
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dart": {
      "enable": true,
      "command": "dart_language_server",
      "filetypes": ["dart"],
      "trace.server": "off",
      "settings": {
        "dart": {
          "validation": {},
          "completion": {}
        }
      }
    },

    "dhall": {
      "command": "dhall-lsp-server",
      "filetypes": ["dhall"],
      "initializationOptions": {
        "vscode-dhall-lsp-server": {
          "asciiOnly": true
        }
      }
    },
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "trace.server": "verbose",
      "initializationOptions": {
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test",
        "elmAnalyseTrigger": "change"
      }
    },
    "haskell": {
      "command": "ghcide",
      "args": ["--lsp"],
      "rootPatterns": [".stack.yaml", ".hie-bios", "BUILD.bazel", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "trace.server": "verbose",
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": false,
          "formattingProvider": "brittany"
        }
      }
    },
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "nim": {
      "command": "nimlsp",
      "filetypes": ["nim"]
    },
    "ocaml": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocaml-language-server", "--stdio"],
      "filetypes": ["ocaml", "reason"]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
      "settings": {
        "purescript": {
          "addSpagoSources": true,
          "addNpmPath": true,
          "buildCommand": "spago build --purs-args --json-errors",
          "editorMode": true
        }
      }
    },
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["typescript"],
      "rootPatterns": ["tsconfig.json", "package.json"]
    }
  }
}
