# Basic Settings

set highlight-transparency .1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding        1

map <Space> toggle_index
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

set default-bg                     "#0B0D13"
set default-fg                     "#d4d6d9"

# set statusbar-bg                   "#0B0D13"
# set statusbar-fg                   "#d4d6d9"

set inputbar-bg                    "#0B0D13"
set inputbar-fg                    "#d4d6d9"

set notification-bg                "#0B0D13"
set notification-fg                "#d4d6d9"

set notification-error-bg          "#0B0D13"
set notification-error-fg          "#d4d6d9"
set notification-warning-bg        "#0B0D13"
set notification-warning-fg        "#d4d6d9"

set highlight-color                "#767C83"
set highlight-active-color         "#7D8288"

set completion-bg                  "#767C83"
set completion-fg                  "#7D8288"

set completion-highlight-bg        "#767C83"
set completion-highlight-fg        "#7D8288"

set recolor-lightcolor             "#0B0D13"
set recolor-darkcolor              "#d4d6d9"

# Startup options
set adjust-open width
set recolor true

