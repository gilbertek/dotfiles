;-------------------------------------------------------------------------------
; TOP BAR                                                                   ;
;-------------------------------------------------------------------------------
[bar/topbar]
enable-ipc          = true
monitor             = ${env:MONITOR:eDP1}

top                 = true
width               = 100%
height              = 38

background          = ${colors.background}
foreground          = ${colors.foreground}

underline-color     = ${colors.alert}
underline-size      = 3
overline-color      = ${colors.alert}
overline-size       = 3

border-size         = 0
border-color        = ${colors.primary}

padding-left        = 2
padding-right       = 2

module-margin-left  = 0
module-margin-right = 2

modules-left        = workspaces xwindow
modules-center      =
modules-right       = filesystem backlight bluetooth pulseaudio wireless-network battery date powermenu

font-0              = "Hack Nerd Font:size=10;0"
font-1              = Iosevka Nerd Font:style=Medium:size=16;4

tray-position       = none
tray-padding        = 4
tray-maxsize        = 0

cursor-click        = pointer
cursor-scroll       = ns-resize

scroll-up           = herbstclient use_index -1
scroll-down         = herbstclient use_index +1

;-------------------------------------------------------------------------------
; CALENDAR DATE                                                                ;
;-------------------------------------------------------------------------------
[module/date]
type                = internal/date
interval            = 5.0
date                = %a
time                = %R

date-alt            = %A, %d %B %Y
time-alt            = %r
label               =  %date% %time%

;-------------------------------------------------------------------------------
; WORKSPACES                                                                   ;
;-------------------------------------------------------------------------------
[module/workspaces]
type                      = internal/xworkspaces
pin-workspaces            = false
enable-click              = true
enable-scroll             = true
reverse-scroll            = true

format                    = <label-state>
label-monitor             = %name%

label-active              = %name%
label-active-foreground   = ${colors.foreground-alt}
label-active-background   = #002F343F
label-active-underline    = ${colors.foreground-alt}
label-active-padding      = 2

label-occupied            = %name%
label-occupied-background = ${colors.background}
label-occupied-padding    = 2
label-occupied-foreground = ${colors.foreground}

label-urgent              = %name%
label-urgent-foreground   = ${colors.foreground}
label-urgent-background   = ${colors.alert}
label-urgent-underline    = ${colors.alert}
label-urgent-padding      = 2

label-empty               = %name%
label-empty-foreground    = ${colors.foreground}
label-empty-padding       = 2
format-foreground         = ${colors.foreground}

