; COLORS                                                                       ;
;----------------------------------------------------------
[colors]
; background          = #00000000
; foreground          = #dfdfdf
; background-alt      = #4c566a
; foreground-alt      = #dddddd
; primary             = #ffb52a
; secondary           = #e60053
; alert               = #bd2c40
