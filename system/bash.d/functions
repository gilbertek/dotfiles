# RSYNC FTP type server trasnfer.
# @usage rsyncsendy local_path IP server_path
# @usage rsyncserver local_path IP server_path
function rsyncsendy() {
  rsync -chavz --partial --progress --stats "$1" root@"$2":"$3"
}

function rsyncserver() {
  rsync -chavz --partial --progress --stats "$1" root@"$2":"$3"
}


