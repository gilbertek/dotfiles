parse_git_branch () {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

# â™¥ â˜† âš¡ Î» â¯ Â» â–¸ â†’ ğŸ’¥ âœš - Keeping some cool ASCII Characters for reference
CHAR='Î»'

PS1="\[\e[33m\]\u\[\e[m\]\[\e[37m\]/\[\e[m\]\[\e[31m\]\W\[\e[m\] \[\e[34m\]\`parse_git_branch\`\[\e[m\] $CHAR "
